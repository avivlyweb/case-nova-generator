{
  "metadata": {
    "version": "2.0",
    "description": "ICF framework reference for physiotherapy clinical reasoning",
    "source": "WHO International Classification of Functioning, Disability and Health",
    "curated_for": "ESP Amsterdam physiotherapy education",
    "last_updated": "2025-01-29",
    "usage_note": "This is a curated subset of ICF codes most relevant to physiotherapy practice. Full ICF contains 1800+ codes."
  },
  "icf_model_overview": {
    "description": "The ICF provides a framework to describe health and health-related states. It shifts focus from cause (disease) to impact (functioning).",
    "components": {
      "body_functions": {
        "code_prefix": "b",
        "description": "Physiological functions of body systems, including psychological functions",
        "example": "b28013 - Pain in back"
      },
      "body_structures": {
        "code_prefix": "s",
        "description": "Anatomical parts of the body such as organs, limbs, and their components",
        "example": "s76002 - Muscles of thigh"
      },
      "activities_participation": {
        "code_prefix": "d",
        "description": "Activities (task execution) and Participation (life involvement)",
        "example": "d4500 - Walking short distances"
      },
      "environmental_factors": {
        "code_prefix": "e",
        "description": "Physical, social, and attitudinal environment that impact functioning",
        "example": "e310 - Immediate family"
      },
      "personal_factors": {
        "code_prefix": "pf",
        "description": "Individual background including age, lifestyle, habits, coping styles (not classified in ICF)",
        "example": "Motivation, self-efficacy, prior experience"
      }
    },
    "qualifiers": {
      "description": "Numeric codes indicating the magnitude of impairment or limitation",
      "scale": {
        "0": "No problem (0-4%)",
        "1": "Mild problem (5-24%)",
        "2": "Moderate problem (25-49%)",
        "3": "Severe problem (50-95%)",
        "4": "Complete problem (96-100%)",
        "8": "Not specified",
        "9": "Not applicable"
      }
    }
  },
  "coaching_prompts": {
    "general": {
      "connecting_impairment_to_activity": "You've identified an impairment (body function). Now ask: How does this impairment affect the patient's activities?",
      "connecting_activity_to_participation": "You've identified an activity limitation. Now ask: How does this affect the patient's participation in life roles?",
      "avoiding_biomedical_tunnel_vision": "You've focused on body functions. Have you considered the patient's activity limitations and participation restrictions?",
      "contextual_factors": "How do environmental or personal factors influence this patient's functioning?"
    },
    "common_student_errors": [
      {
        "error": "Listing impairments without linking to activities",
        "coaching_response": "I see you've identified impairments. Can you explain HOW these impairments cause the patient's activity limitations?"
      },
      {
        "error": "Confusing impairments with activity limitations",
        "coaching_response": "Is 'pain' an impairment (body function) or an activity limitation? Where would 'difficulty walking' fit?"
      },
      {
        "error": "Ignoring participation restrictions",
        "coaching_response": "You've addressed the impairments and activities. But what about the patient's life roles - work, family, recreation?"
      },
      {
        "error": "Not considering environmental factors",
        "coaching_response": "How does the patient's environment (home, work, social support) affect their functioning?"
      }
    ]
  },
