  "hoac_icf_integration": {
    "description": "How ICF maps to HOAC-II steps",
    "step_1_collect_data": {
      "icf_focus": "Identify all relevant body functions, activities, and participation from patient interview",
      "key_question": "What impairments, activity limitations, and participation restrictions are present?"
    },
    "step_2_problem_statements": {
      "icf_focus": "Frame problems as activity limitations and participation restrictions (not just impairments)",
      "key_question": "Are your problems framed at the activity/participation level, linked to underlying impairments?"
    },
    "step_3_establish_goals": {
      "icf_focus": "Goals should target activity and participation levels",
      "key_question": "Are your goals written at the activity/participation level with measurable outcomes?"
    },
    "step_4_select_interventions": {
      "icf_focus": "Interventions address impairments to improve activities and participation",
      "key_question": "How does this intervention address the impairment to improve the activity limitation?"
    },
    "step_7_reevaluate": {
      "icf_focus": "Reassess at all ICF levels - impairments, activities, participation",
      "key_question": "Have you reassessed both the underlying impairments AND the functional outcomes?"
    }
  }
